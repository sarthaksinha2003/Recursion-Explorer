# ========================================
# BACKEND ENVIRONMENT VARIABLES
# ========================================

# Database Configuration
MONGODB_URI=your-url

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URLs (for CORS). Comma-separated for multiple origins
FRONTEND_URLS=http://localhost:5173

# Email Configuration (for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================

# API Configuration
VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=Recursion Explorer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Interactive algorithm visualization and learning platform

# Development Configuration
VITE_DEV_MODE=true
VITE_ENABLE_LOGGING=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# External Services (if needed in future)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_STRIPE_PUBLIC_KEY=

# ========================================
# SECURITY & PERFORMANCE
# ========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# ========================================
# DEVELOPMENT OVERRIDES
# ========================================

# Uncomment these for local development without backend
# VITE_MOCK_API=true
# VITE_USE_LOCAL_STORAGE_ONLY=true

# Uncomment for production
# NODE_ENV=production
# VITE_DEV_MODE=false
# VITE_ENABLE_LOGGING=false
# VITE_ENABLE_DEBUG_MODE=false 